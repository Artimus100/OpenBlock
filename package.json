{
  "name": "permissionless-block-builder",
  "version": "1.0.0",
  "description": "Decentralized block building infrastructure for Solana",
  "private": true,
  "workspaces": [
    "api-server",
    "frontend-dashboard"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd api-server && npm run dev",
    "dev:frontend": "cd frontend-dashboard && npm run dev",
    "dev:all": "./run-all-services.sh start",
    "services:start": "./run-all-services.sh start",
    "services:stop": "./run-all-services.sh clean",
    "services:status": "./run-all-services.sh status",
    "demo:treasury": "./run-all-services.sh demo",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "build:rust": "cargo build --release --workspace",
    "test:rust": "cargo test --workspace",
    "build:all": "npm run build:rust && npm run build:frontend",
    "build:frontend": "cd frontend-dashboard && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
